" my VIM configuration file - embrace the darkness

" basics
filetype plugin indent on
syntax on
set encoding=utf-8
set shell=/bin/bash
set showmode
set showcmd
set tabstop=4
set softtabstop=4
set ruler
set number
set relativenumber
set wrap
set spell spelllang=en_us
set colorcolumn=80
set textwidth=80
set ignorecase
set smartcase

" Mappings
inoremap jk <ESC>
let mapleader="\<Space>"	"set mapleader - first key to start a shortcut
